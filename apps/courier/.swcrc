{
  "$schema": "https://swc.rs/schema.json",
  "jsc": {
    "parser": {
      "syntax": "typescript"
    },
    "target": "es2020", // Target Node.js version compatibility (adjust as needed, e.g., es2021, es2022)
    "keepClassNames": true, // Often useful for Node.js debugging/frameworks
    "externalHelpers": false // Embed helpers directly, simpler for bundling
  },
  "module": {
    "type": "es6"
  },
  "sourceMaps": true, // Generate source maps for debugging ('inline' is also an option)
  "minify": false // Set to true for production builds to reduce size
}